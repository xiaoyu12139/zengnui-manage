/* 按钮通用样式 */
QPushButton {
    background-color: #7C3AED;   /* 品牌紫 */
    color: #ffffff;
    border: none;
    border-radius: 5px;
    padding: 4px 16px;
    min-height: 15px;
}
QPushButton:hover {
    background-color: #8B5CF6;   /* 悬停更亮 */
}
QPushButton:pressed {
    background-color: #6D28D9;   /* 按下更暗 */
}
QPushButton:disabled {
    background-color: #2a2f38;
    color: #7B7B7B;
}
/* 默认按钮（有默认属性时） */
QPushButton:default {
    background-color: #8B5CF6;
}

